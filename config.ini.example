# 中国象棋辅助程序配置文件示例
# 复制此文件为 config.ini 并根据需要修改

[General]
# 截图间隔（秒）
screenshot_interval = 2

# 是否启动时自动开始分析
auto_start = false

# 语言设置 (zh_CN, en_US)
language = zh_CN

[Engine]
# 引擎路径（相对或绝对路径）
engine_path = engine/pikafish.exe

# 引擎分析深度
search_depth = 15

# 引擎思考时间（毫秒，0表示使用深度）
search_time = 0

# 引擎哈希表大小（MB）
hash_size = 256

# 使用的线程数
threads = 4

[Recognition]
# 棋盘识别方法 (auto, template, deep_learning)
method = auto

# 是否保存调试图像
save_debug_images = true

# 调试图像保存路径
debug_path = debug/

# 棋盘检测灵敏度 (low, medium, high)
sensitivity = medium

[Display]
# GUI窗口大小
window_width = 800
window_height = 600

# 是否显示棋盘预览
show_board_preview = true

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
log_level = INFO

[Hotkeys]
# 开始/停止分析
toggle_analysis = ctrl+s

# 立即截图
capture_now = ctrl+c

# 退出程序
quit = ctrl+q

[Advanced]
# 是否使用固定截图区域
use_fixed_region = false

# 固定区域坐标 (x, y, width, height)
fixed_region = 0, 0, 800, 800

# 是否记录分析历史
save_analysis_log = false

# 分析日志文件路径
analysis_log_path = logs/analysis.log

# 最大日志文件大小（MB）
max_log_size = 10

